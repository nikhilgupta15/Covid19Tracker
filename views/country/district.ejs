<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
    <title>Covid19 Tracker</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <div class="container">
      <table class="table m-2">
        <thead class="thead-dark">
          <tr>
            <th scope="col">District</th>
            <th scope="col">Total Cases</th>
            <th scope="col">Active Cases</th>
            <th scope="col">Recovered</th>
            <th scope="col">Deaths</th>
          </tr>
        </thead>
        <tbody>
          <% const obj1 = Object.entries(district); %> <% for(const [key,value]
          of obj1){ %> <% const obj2 = Object.entries(value); %> <% for(const
          [key1,value1] of obj2 ){ %> <% if(typeof value1 === 'object'){ %> <%
          const obj3 = Object.entries(value1) %> <% for(const [key2,value2] of
          obj3){ %> <% if(key === state){ %>
          <tr>
            <td><%= key2 %></td>
            <td><%= value2.confirmed %></td>
            <td class="text-danger"><%= value2.active %></td>
            <td class="text-success"><%= value2.recovered %></td>
            <td class="text-secondary"><%= value2.deceased %></td>
          </tr>
          <% } } } } } %>
        </tbody>
      </table>
    </div>
  </body>
  <script
    src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
    crossorigin="anonymous"
  ></script>
</html>
