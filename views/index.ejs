<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <title>Covid19 Tracker</title>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <div
      class="jumbotron row border border-secondary rounded bg-light text-center m-2 mt-4"
    >
      <div class="col-sm-3">
        <div>
          <h6>Stats Overview</h6>
        </div>
        <div>
          <form action="/country" method="POST">
            <div class="form-group m-2">
              <label for="country">Choose a country for detailed stats:</label>
              <select name="country" id="country" class="form-control">
                <option>Global</option>
                <% country.map(country => { %>
                <option value="<%= country.Country %>">
                  <%= country.Country %>
                </option>
                <% }) %>
              </select>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary m-2" />
          </form>
        </div>
      </div>
      <div class="col-sm-3">
        <div>
          <h4 class="text-danger font-weight-bold">
            <%= global.TotalConfirmed %>
          </h4>
        </div>
        <div>
          <h6 class="text-secondary m-2">Confirmed</h6>
        </div>
        <div>
          <h6 class="text-danger">+ <%= global.NewConfirmed %> new cases</h6>
        </div>
      </div>
      <div class="col-sm-3">
        <div>
          <h4 class="text-success font-weight-bold">
            <%= global.TotalRecovered %>
          </h4>
        </div>
        <div>
          <h6 class="text-secondary m-2">Recovered</h6>
        </div>
        <div>
          <h6 class="text-success">+ <%= global.NewRecovered %> recovered</h6>
        </div>
      </div>
      <div class="col-sm-3">
        <div>
          <h4 class="text-secondary font-weight-bold">
            <%= global.TotalDeaths %>
          </h4>
        </div>
        <div>
          <h6 class="text-secondary m-2">Deaths</h6>
        </div>
        <div>
          <h6 class="text-secondary">+ <%= global.NewDeaths %> deaths</h6>
        </div>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
